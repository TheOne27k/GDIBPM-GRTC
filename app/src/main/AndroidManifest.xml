<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_grtc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_grtc_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dibpm"
        tools:targetApi="31">

        <activity
            android:name=".auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".menu.MenuActivity"/>
        <activity android:name=".displacement.DisplacementRegisterActivity" />
        <activity android:name=".dashboard.DashboardActivity" />
        <activity android:name=".displacement.FilterActivity"/>
        <activity android:name=".management.ManagementActivity"/>
        <activity android:name=".heritage_asset.HeritageAssetRegisterActivity" />
        <activity android:name=".auth.ForgotPasswordActivity" />
        <activity android:name=".management.area.AreaActivity" />
        <activity android:name=".management.user.UserActivity"/>
    </application>
</manifest>

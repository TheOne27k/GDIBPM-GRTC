<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TÃ­tulo del proyecto -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos Estadisticos del Desplazamiento Interno de Bienes Patrimoniales"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_gravity="center"
        android:paddingBottom="40dp" />

    <!-- Contenedor de iconos -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:padding="16dp"
        android:layout_gravity="center">

        <!-- Icono 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_total_movimientos"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/totalmovimientos"
                android:contentDescription="Total Movimientos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Movimientos"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icono 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_movimiento_dia"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/movimientoxdia"
                android:contentDescription="Movement por Dia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimientos por Dia"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icono 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_movimiento_item"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/movimientoxitem"
                android:contentDescription="Movimiento por Item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movimiento por Item"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Icono 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/icon_tiempo_proceso"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tiempodeproceso"
                android:contentDescription="Tiempo de Procesamiento" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo de Procesamiento"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>
    </GridLayout>

    <!-- Contenedor de resultados -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"
            android:id="@+id/results_container">

        </LinearLayout>
    </ScrollView>

</LinearLayout>

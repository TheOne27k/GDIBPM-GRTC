<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:background="@color/gray_light"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal">
    <TableRow>
        <TextView
            android:id="@+id/heritage_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/heritage_state"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/heritage_evidence"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:src="@drawable/image_placeholder"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/heritage_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/blue"
                app:icon="@drawable/pencil_svgrepo_com"
                app:iconSize="30dp"
                android:gravity="center"
                app:iconGravity="textTop"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_marginLeft="3dp"
                android:layout_height="50dp"
                app:icon="@drawable/trash_bin_minimalistic_svgrepo_com"
                android:backgroundTint="@color/red"
                app:iconSize="30dp"
                android:gravity="center"
                app:iconGravity="textTop"/>

        </LinearLayout>
    </TableRow>
</TableLayout>